#define MyAppName "diverseshot"
#define MyAppVersion "0.23"
#define MyAppPublisher "DIVERSHOT, Inc."
#define MyAppURL "https://diverseshot.webflow.io/"
#define MyAppExeName "diverse_lauch.exe"
#define MyAppAssocName MyAppName + " File"
#define MyAppAssocPlyName  "Ply File"
#define MyAppAssocSplatName "Splat File"
#define MyAppAssocCompressPlyName "CompressPly File"
#define MyAppAssocExt ".dvs"
#define MyAppAssocPlyExt ".ply"
#define MyAppAssocSplatExt ".splat"
#define MyAppAssocCompressedPlyExt ".compressed.ply"

#define MyAppAssocKey StringChange(MyAppAssocName, " ", "") + MyAppAssocExt
#define MyAppAssocPlyKey StringChange(MyAppAssocPlyName, " ", "") + MyAppAssocPlyExt
#define MyAppAssocSplatKey StringChange(MyAppAssocSplatName, " ", "") + MyAppAssocSplatExt
#define MyAppAssocCompressPlyKey StringChange(MyAppAssocCompressPlyName, " ", "") + MyAppAssocCompressedPlyExt
[Setup]
; NOTE: The value of AppId uniquely identifies this application. Do not use the same AppId value in installers for other applications.
; (To generate a new GUID, click Tools | Generate GUID inside the IDE.)
AppId={{0DEB0D83-68CF-4360-AEC7-F040FDF928A6}
AppName={#MyAppName}
AppVersion={#MyAppVersion}
;AppVerName={#MyAppName} {#MyAppVersion}
AppPublisher={#MyAppPublisher}
AppPublisherURL={#MyAppURL}
AppSupportURL={#MyAppURL}
AppUpdatesURL={#MyAppURL}
DefaultDirName={autopf}\{#MyAppName}
; "ArchitecturesAllowed=x64compatible" specifies that Setup cannot run
; on anything but x64 and Windows 11 on Arm.
ArchitecturesAllowed=x64compatible
; "ArchitecturesInstallIn64BitMode=x64compatible" requests that the
; install be done in "64-bit mode" on x64 or Windows 11 on Arm,
; meaning it should use the native 64-bit Program Files directory and
; the 64-bit view of the registry.
ArchitecturesInstallIn64BitMode=x64compatible
ChangesAssociations=yes
DisableProgramGroupPage=yes
; Uncomment the following line to run in non administrative install mode (install for current user only.)
;PrivilegesRequired=lowest
OutputBaseFilename=divershot_install
SetupIconFile=D:\ProgramCode\C++\Render\diverse\resource\app_icons\icon128_hF3_icon.ico
Compression=lzma
SolidCompression=yes
WizardStyle=modern

[Languages]
Name: "english"; MessagesFile: "compiler:Default.isl"

[Tasks]
Name: "desktopicon"; Description: "{cm:CreateDesktopIcon}"; GroupDescription: "{cm:AdditionalIcons}"; Flags: unchecked

[Files]
Source: "D:\ProgramCode\C++\Render\diverse_v022\{#MyAppExeName}"; DestDir: "{app}"; Flags: ignoreversion
Source: "D:\ProgramCode\C++\Render\diverse_v022\app_files\*"; DestDir: "{app}"; Flags: ignoreversion recursesubdirs createallsubdirs
; NOTE: Don't use "Flags: ignoreversion" on any shared system files

[Registry]
Root: HKA; Subkey: "Software\Classes\{#MyAppAssocExt}\OpenWithProgids"; ValueType: string; ValueName: "{#MyAppAssocKey}"; ValueData: ""; Flags: uninsdeletevalue
Root: HKA; Subkey: "Software\Classes\{#MyAppAssocKey}"; ValueType: string; ValueName: ""; ValueData: "{#MyAppAssocName}"; Flags: uninsdeletekey
Root: HKA; Subkey: "Software\Classes\{#MyAppAssocKey}\DefaultIcon"; ValueType: string; ValueName: ""; ValueData: "{app}\{#MyAppExeName},0"
Root: HKA; Subkey: "Software\Classes\{#MyAppAssocKey}\shell\open\command"; ValueType: string; ValueName: ""; ValueData: """{app}\{#MyAppExeName}"" ""%1"""
Root: HKA; Subkey: "Software\Classes\Applications\{#MyAppExeName}\SupportedTypes"; ValueType: string; ValueName: ".myp"; ValueData: ""
; "ply file"
Root: HKA; Subkey: "Software\Classes\MyAppAssocPlyExt\OpenWithProgids"; ValueType: string; ValueName: "{#MyAppAssocPlyKey}"; ValueData: ""; Flags: uninsdeletevalue
Root: HKA; Subkey: "Software\Classes\{#MyAppAssocPlyKey}"; ValueType: string; ValueName: ""; ValueData: "{#MyAppAssocPlyName}"; Flags: uninsdeletekey
Root: HKA; Subkey: "Software\Classes\{#MyAppAssocPlyKey}\DefaultIcon"; ValueType: string; ValueName: ""; ValueData: "{app}\{#MyAppExeName},0"
Root: HKA; Subkey: "Software\Classes\{#MyAppAssocPlyKey}\shell\open\command"; ValueType: string; ValueName: ""; ValueData: """{app}\{#MyAppExeName}"" ""%1"""
; "splat file"
Root: HKA; Subkey: "Software\Classes\MyAppAssocSplatExt\OpenWithProgids"; ValueType: string; ValueName: "{#MyAppAssocSplatKey}"; ValueData: ""; Flags: uninsdeletevalue
Root: HKA; Subkey: "Software\Classes\{#MyAppAssocSplatKey}"; ValueType: string; ValueName: ""; ValueData: "{#MyAppAssocSplatName}"; Flags: uninsdeletekey
Root: HKA; Subkey: "Software\Classes\{#MyAppAssocSplatKey}\DefaultIcon"; ValueType: string; ValueName: ""; ValueData: "{app}\{#MyAppExeName},0"
Root: HKA; Subkey: "Software\Classes\{#MyAppAssocSplatKey}\shell\open\command"; ValueType: string; ValueName: ""; ValueData: """{app}\{#MyAppExeName}"" ""%1"""
; "compressed.ply file"
Root: HKA; Subkey: "Software\Classes\MyAppAssocCompressedPlyExt\OpenWithProgids"; ValueType: string; ValueName: "{#MyAppAssocCompressPlyKey}"; ValueData: ""; Flags: uninsdeletevalue
Root: HKA; Subkey: "Software\Classes\{#MyAppAssocCompressPlyKey}"; ValueType: string; ValueName: ""; ValueData: "{#MyAppAssocCompressPlyName}"; Flags: uninsdeletekey
Root: HKA; Subkey: "Software\Classes\{#MyAppAssocCompressPlyKey}\DefaultIcon"; ValueType: string; ValueName: ""; ValueData: "{app}\{#MyAppExeName},0"
Root: HKA; Subkey: "Software\Classes\{#MyAppAssocCompressPlyKey}\shell\open\command"; ValueType: string; ValueName: ""; ValueData: """{app}\{#MyAppExeName}"" ""%1"""

[Icons]
Name: "{autoprograms}\{#MyAppName}"; Filename: "{app}\{#MyAppExeName}"
Name: "{autodesktop}\{#MyAppName}"; Filename: "{app}\{#MyAppExeName}"; Tasks: desktopicon

[Run]
Filename: "{app}\{#MyAppExeName}"; Description: "{cm:LaunchProgram,{#StringChange(MyAppName, '&', '&&')}}"; Flags: nowait postinstall skipifsilent

